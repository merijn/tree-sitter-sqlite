{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist/",
    "allowJs": true,
    "noImplicitAny": false
  },
  "include": [
    "grammar.ts",
    "grammar/*.ts",
    "types/*.d.ts"
  ]
}
